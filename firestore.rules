rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.email == request.auth.token.email;
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && request.auth.token.email == 'test1@gmail.com';
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User skills collection - users can only read/write their own skills
    match /user_skills/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Admins collection - only admins can read, super admin can write
    match /admins/{adminDoc} {
      allow read: if isAdmin() || isSuperAdmin();
      allow write: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Jobs collection - public read, admin write
    match /jobs/{jobId} {
      allow read: if true; // Public read for job listings
      allow create: if isAdmin();
      allow update: if isAdmin() && 
                      (isSuperAdmin() || resource.data.postedBy == request.auth.token.email);
      allow delete: if isAdmin() && 
                      (isSuperAdmin() || resource.data.postedBy == request.auth.token.email);
    }
    
    // Applications collection - users can create, admins and applicants can read
    match /applications/{appId} {
      allow create: if isAuthenticated() && 
                      request.resource.data.userEmail == request.auth.token.email;
      allow read: if isAuthenticated() && 
                    (isAdmin() || resource.data.userEmail == request.auth.token.email);
      allow update: if isAdmin(); // Only admins can update status
      allow delete: if isAdmin();
    }
    
    // Staff inquiries - authenticated users can create, admins can read/update
    match /staff_inquiries/{inquiryId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Client leads - authenticated users can create, admins can read/update
    match /leads/{leadId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Settings collection - admins only
    match /settings/{settingId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
